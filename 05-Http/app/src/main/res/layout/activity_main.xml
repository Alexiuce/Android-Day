<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <!-- 内容占位 : 将使用fragment 内容添加到此控件内部显示 -->
   <RelativeLayout
       android:id="@+id/placeholder_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
    <!--底部 tab bar -->
    <LinearLayout
        android:id="@+id/tabBar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        >

     <RelativeLayout
         android:id="@+id/tab_home_layout"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/tab_home_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/comui_tab_home"
             android:layout_centerHorizontal="true"
             />
         <TextView
             android:id="@+id/tab_home_textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/tab_home_title"
             android:layout_centerHorizontal="true"
             android:layout_below="@id/tab_home_icon"/>

     </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_classify_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tab_classify_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comui_tab_message"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tab_classify_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_classify_title"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tab_classify_icon"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_discovery_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tab_discovery_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comui_tab_person"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tab_discovery_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_discovery_title"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tab_discovery_icon"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_profile_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tab_profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comui_tab_pond"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tab_profile_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/tab_profile_title"

                android:layout_below="@id/tab_profile_icon"/>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>