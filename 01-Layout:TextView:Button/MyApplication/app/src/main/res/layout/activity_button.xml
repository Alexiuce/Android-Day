<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    tools:context=".ButtonActivity">

    <Button
        android:id="@+id/btn_button1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="button1"
        android:textColor="#ff66ff"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/btn_button2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Button2"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_circle_shape"
        android:layout_below="@id/btn_button1"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_button3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Button2"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button_stroke_shape"
        android:layout_below="@id/btn_button2"
        android:layout_marginTop="10dp"

        />
    <Button
        android:id="@+id/btn_button4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#000000"
        android:text="Button4"
        android:onClick="showToast"
        android:background="@drawable/button_selected"
        android:layout_below="@id/btn_button3"
        android:layout_marginTop="15dp"

        />


</RelativeLayout>